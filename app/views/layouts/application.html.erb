        <em>Not logged in.</em>
        <%= link_to 'Login', new_session_path %>
      <% end %>
    </div>
  <title>Shovell</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= yield %>
</body>
  </div>
